{% schema %}
{
    "name": "Theme Navbar",
    "settings": [
        {
            "type": "image_picker",
            "id": "theme_logo",
            "label": "Logo"
        },
        {
            "type": "header",
            "content": "Topbar"
        },
        {
            "type": "checkbox",
            "id": "show-topbar",
            "label": "Show topbar",
            "default": true
        },
        {
            "type": "text",
            "id": "topbar-phonenumber",
            "label": "Phone number",
            "default": "+880xxxxxxxxxx"
        },
        {
            "type": "text",
            "id": "topbar-email",
            "label": "Email",
            "default": "example@example.com"
        },
        {
            "type": "text",
            "id": "topbar-location",
            "label": "Location",
            "default": "The Internet"
        },
        {
            "type": "header",
            "content": "Navigation Menu"
        },
        {
            "type": "checkbox",
            "id": "show-collections",
            "label": "Show Collections",
            "default": true
        },
        {
            "type": "text",
            "id": "collections-label",
            "label": "Collection Header",
            "default": "Collections"
        }
    ]
}
{% endschema %}
